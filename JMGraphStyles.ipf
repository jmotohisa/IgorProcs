#pragma rtGlobals=1		// Use modern global access method.Proc Wavelength(vert) : GraphStyle	Variable vert=1	Prompt vert, "with vertical scale",popup,"yes;no"	PauseUpdate; Silent 1		// modifying window...	ModifyGraph/Z tick=2	ModifyGraph/Z mirror=1	ModifyGraph/Z lblMargin(left)=12,lblMargin(bottom)=8	ModifyGraph/Z lblLatPos(left)=-6//	Label/Z left "\\F'Times New Roman'Intensity (arb units)"//	Label/Z bottom "\\F'Times New Roman'Wavelength (nm)"	Label/Z left "Intensity (arb. units)"	Label/Z bottom "Wavelength (nm)"	ModifyGraph fSize(bottom)=16      ModifyGraph fSize=16      if(vert==2)      	ModifyGraph noLabel(left)=1      else 		ModifyGraph noLabel(left)=0	      EndifEndMacroProc Energy_eV(vert) : GraphStyle	Variable vert=1	Prompt vert, "with vertical scale",popup,"yes;no"	PauseUpdate; Silent 1		// modifying window...	ModifyGraph/Z tick=2	ModifyGraph/Z mirror=1	ModifyGraph/Z lblMargin(left)=12,lblMargin(bottom)=8	ModifyGraph/Z lblLatPos(left)=-6//	Label/Z left "\\F'Times New Roman'Intensity (arb units)"//	Label/Z bottom "\\F'Times New Roman'Wavelength (nm)"	Label/Z left "Intensity (arb. units)"	Label/Z bottom "Energy (eV)"	ModifyGraph fSize(bottom)=16       ModifyGraph fSize=16      if(vert==2)      	ModifyGraph noLabel(left)=1      else 		ModifyGraph noLabel(left)=0	      EndifEndMacroProc ChangeScaleUnitWL(wname)	String wname	ChangeScaleUnit(wname,"m","V")EndProc ChangeScaleUnit(wname,xunit,yunit)	String wname,xunit,yunit	PauseUpdate;Silent 1	Variable sc1,sc2	sc1=DimOffset($wname,0)	sc2=DimDelta($wname,0)	SetScale/P x sc1,sc2,xunit, $wname	SetScale d 0,1,yunit, $wnameEnd