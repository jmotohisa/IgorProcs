#pragma rtGlobals=1		// Use modern global access method.// LoadSPEData.ipf// by J. Motohisa//// Collections of simple macro and procedures to display data// suitable for displaying spectrum data//// based on Wavemetrix supplied Macro "GraphPlot()" (see below for detail description)//// 2000/11/?? ver 0.01: first version// ... many revisions// 2005/01/31 ver 0.2 : new procedure wDisplaynum is added.// Graphplot()// Graphplot() is the macro that creates Graphplot.// It is called from AutoGraph1() and AutoGraph2() if Graphplot does not exist when they run.// The Graphplot() macro was made by automatically by Igor's display recreation macro feature.Function FGraphPlot()	Display /W=(3,41,636,476) dummywave0	Label left "counts"	Label bottom "nm"	Textbox/N=tb_file/F=0/A=MT/X=-30.00 "File: XR1.L00"EndWindow Graphplot() : Graph	PauseUpdate; Silent 1		| building window...	Display /W=(3,41,636,476) dummywave0	Label left "counts"	Label bottom "nm"	Textbox/N=tb_file/F=0/A=MT/X=-30.00 "File: XR1.L00"EndMacroFunction FGraphplotxy()	Display /W=(3,44,636,479) dummyywave0 vs dummyxwave0	Label left "counts"	Label bottom "nm"	TextBox/C/N=tb_file/F=0/A=MT/X=-30.00 "File:"EndMacroWindow Graphplotxy() : Graph	PauseUpdate; Silent 1		// building window...	Display /W=(3,44,636,479) dummyywave0 vs dummyxwave0	Label left "counts"	Label bottom "nm"	TextBox/C/N=tb_file/F=0/A=MT/X=-30.00 "File: N2417_プレーナー部_#1B45061.SPE"EndMacroProc wDisplay(wn)	String wn	Prompt wn,"Wave Name",popup,wavelist("W*", ";", "")		Silent 1;PauseUpdate	String xwn	xwn="L" + wn[1,strlen(wn)]	Display $wn vs $xwnEndProc wAppend(wn)	String wn	Prompt wn,"Wave Name",popup,wavelist("W*", ";", "")		Silent 1;PauseUpdate	String xwn	xwn="L" + wn[1,strlen(wn)]	Append $wn vs $xwnEndProc wAppendR(wn)	String wn	Prompt wn,"Wave Name",popup,wavelist("W*", ";", "")		Silent 1;PauseUpdate	String xwn	xwn="L" + wn[1,strlen(wn)]	Append/R $wn vs $xwnEndProc wDisplayNum(prefix,start,stop)	String prefix="w"	Variable start,stop	Silent 1;PauseUpdate		Variable index=start	String wv,wvx,wvy	Display	do		wv=prefix+num2istr(index)		wvx="L"+wv		wvy="W"+wv		Append $wvy vs $wvx		index+=1	while(index<=stop)End