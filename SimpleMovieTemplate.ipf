#pragma rtGlobals=1		// Use modern global access method.Macro MakeSimpleMovie(showDialog)	Variable showDialog=1	Silent 1	if( showDialog )		NewMovie/Z/I/O/P=home as "sdhmovie"	else		NewMovie/Z/O/P=home as "sdhmovie"	endif	if( V_Flag!=0 )		print "canceled for some reason"		return 0			// probably canceled	endif	Variable i=0,nframes	nframes=numpnts(sigma_orig)		do		Duplicate/O/R=[0,i] sigma_orig, sigma		Duplicate/O/R=[0,i] eferim_orig, efermi		DoUpdate		AddMovieFrame		i+=2	while(i<nframes)	CloseMovie	PlayMovie/P=home as "sdhmovie"End Macro